<h1>Edit page</h1>
<%- include("./partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!-- MethodOveride looks for '?method=...' in the query string to override the default routes -->
    <!-- PUT request are not supported by default in HTML forms -->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="title" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="image" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="blog post goes here" required><%= blog.body %></textarea>
            <!-- <input type="text" name="blog[body]" placeholder="blog post here"> -->
        </div>
        <input class="ui inverted green button" type="submit">
    </form>
</div>
<%- include("./partials/footer") %>